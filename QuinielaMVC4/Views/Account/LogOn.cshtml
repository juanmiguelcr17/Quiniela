@model QuinielaMVC4.Models.LogOnModel

@{
    ViewBag.Title = "Quiniela | Login";
}

<div class="page-header">
    <div class="container">
        <h2>Iniciar sesión</h2>
        <p>
            Por favor ingresa tu usuario y contraseña. @Html.ActionLink("Registrate", "Register",null,new { @class="text-danger" }), si aún no tienes una cuenta.
        </p>


        @Html.ValidationSummary(true, "No se pudo iniciar sesión. Por favor verifica la información e intenta de nuevo.")

        <div class="col-md-6">
            <div class="well bs-component">
                @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div>
                        <h3>Información de la cuenta</h3>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                @Html.CheckBoxFor(m => m.RememberMe, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 text-right">
                                <input type="submit" value="Entrar" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
