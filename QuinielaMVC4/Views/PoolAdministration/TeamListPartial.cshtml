@model IEnumerable<QuinielaMVC4.Models.Entities.Team>

<a href="#" class="btn btn-default btn-sm" data-toggle="modal" data-target="#ModalTeams">Añadir Equipo</a>
<div class="modal fade" id="ModalTeams" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">Equipos</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Shield)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.OrderBy(a => a.Name))
                    {
                        <tr class="active">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.Shield)"
                                     title="@Html.DisplayFor(modelItem => item.Name)"
                                     width="@Html.DisplayFor(modelItem => item.ShieldWidth)"
                                     height="@Html.DisplayFor(modelItem => item.ShieldHeight)" />
                            </td>
                            <td>
                                @Ajax.ActionLink("Añadir", "AddToSeason", new { teamId = item.TeamId, seasonId = ViewData["seasonId"] }, new AjaxOptions { HttpMethod = "POST", OnComplete = "OnComplete", OnFailure="OnError" }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

