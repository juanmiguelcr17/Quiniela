@model IEnumerable<QuinielaMVC4.Models.Entities.Season>

@{
    ViewBag.Title = "Quiniela | Temporadas";
}

<div class="page-header">
    <div class="container">
        <h2>Temporadas</h2>
        <p>
            @Html.ActionLink("Nueva Temporada", "SeasonCreate", new { id = Guid.Empty }, new { @class= "btn btn-default btn-sm" })
        </p>
        <div class="col-sm-8">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Starts)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ends)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Weeks)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr class="active">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Starts)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ends)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Weeks)
                        </td>
                        <td>
                            @Html.ActionLink("Detalles", "SeasonDetails", new { id = item.SeasonId }, new { @class = "btn btn-default btn-xs" }) 
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.SeasonId }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }

            </table>
            <a id="btnVolver" class="btn btn-default btn-sm">Volver</a>
        </div>
    </div>
</div>
