@model IEnumerable<QuinielaMVC4.ViewModels.WeekGamesVM>

@{
    ViewBag.Title = "Quiniela | Partidos semana";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="container">
        <h2>Partidos de la semana</h2>

        <div class="col-sm-8">
            @Html.ActionLink("Nuevo partido","GameCreate",new { weekId = ViewBag.WeekId, seasonId = ViewBag.SeasonId }, new { @class = "btn btn-default btn-sm" })
            <hr />
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Result)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Local)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocalScore)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Visitor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VisitorScore)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="active">
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Result)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Local)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocalScore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Visitor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitorScore)
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                            @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
